@model CTN4_View.Controllers.Shop.DiaChiKhachHang.ViewMoel.DiaChiKhachHangView
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="tracking_box_area section_gap">

    <div class="container">
        <h1>Danh sách Địa chỉ nhận hàng của bạn</h1>
        <div class="dropdown">
        </div>
        <table class="table" id="listDiaChiContainer">
            <thead>
                <tr>
                    <th>Địa chỉ Cụ thể</th>
        @*             <th>Địa chỉ nhận hàng</th> *@
                    <th>Xã,Phường</th>
                    <th>Quận,huyện</th>
                    <th>Tỉnh,thành phố
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in @Model.DiaChiNhanHangs)
                {
                    <tr>
                        <td>@item.name</td>
                        @{
                            string inputString = @item.DiaChi;
                            string[] splittedStrings = inputString.Split(',');
                        }
                        <td>
                            @splittedStrings[0].Trim()
                        </td>
                        <td>
                            @splittedStrings[1].Trim()
                        </td>
                        <td>@splittedStrings[2].Trim()</td>
                        <td>
                            <form>
                                <input type="hidden" name="id" value="@item.Id" />
                        <td>
                            <div class="dropdown me-1">
                                <button type="button" class="custom-button" data-bs-toggle="dropdown" aria-expanded="false" data-bs-offset="10,20">
                                    Bỏ
                                </button>
                                <ul class="dropdown-menu">
                                    <button class="custom-button" asp-action="BoDiaChi">Xác nhận</button>
                                </ul>
                            </div>
                        </td>
                        <td>
                            <button class="custom-button1" asp-action="SetChinh">Set Mặc định</button>
                        </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn btn-custom-primary" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
                                    <i class="fa fa-bars"></i>
                                </button>
                                <div class="dropdown-menu p-4">
                                    <div class="dropdown">
                                        <button type="button" class="btn btn-custom-primary" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
                                            Đổi địa chỉ cụ thể
                                        </button>
                                        <div class="dropdown-menu p-4">
                                            <div class="form-group">
                                                <label for="GhiChu" class="col-form-label">nhập tên</label>
                                                <textarea name="TenCuthe" class="form-control" rows="4" cols="50"></textarea>
                                            </div>
                                            <br />
                                            <div class="form-row">
                                                <div class="col">
                                                    <button type="submit" class="btn btn-custom-primary" asp-action="DoiDiaChiCuThe">Xác nhận </button>
                                                </div>
                                                <div class="col-auto text-right"></div>
                                            </div>
                                            <br />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                        </form>
                            @if (item.TrangThai == true)
                            {
                            <td>
                                <p><span style="color: green;">&#x2713;</span></p>
                            </td>
                            }
                        <td>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</section>
<style>
    h1 {
        color: #333;
        text-align: center;
        padding: 20px;
        background-color: #3498db;
        margin: 0;
    }

    .custom-button {
        padding: 10px 20px;
        margin: 0 10px;
        cursor: pointer;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
        color: var(--bs-btn-color, #fff);
        background-color: var(--bs-btn-bg, #ff6347);
        border-color: var(--bs-btn-border-color, #ff6347);
    }

        .custom-button:hover {
            color: var(--bs-btn-hover-color, #fff);
            background-color: var(--bs-btn-hover-bg, #dc4735);
            border-color: var(--bs-btn-hover-border-color, #c84131);
        }

        .custom-button:focus {
            box-shadow: 0 0 0 0.25rem var(--bs-btn-focus-shadow-rgb, #ff6347);
        }

        .custom-button:active {
            color: var(--bs-btn-active-color, #fff);
            background-color: var(--bs-btn-active-bg, #c84131);
            border-color: var(--bs-btn-active-border-color, #b5362d);
            box-shadow: var(--bs-btn-active-shadow, inset 0 3px 5px rgba(0, 0, 0, 0.125));
        }

        .custom-button:disabled {
            color: var(--bs-btn-disabled-color, #fff);
            background-color: var(--bs-btn-disabled-bg, #ff6347);
            border-color: var(--bs-btn-disabled-border-color, #ff6347);
        }

    .custom-button1 {
        padding: 10px 20px;
        margin: 0 10px;
        cursor: pointer;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
        color: var(--bs-btn-color, #fff);
        background-color: var(--bs-btn-bg, #49BEFF);
        border-color: var(--bs-btn-border-color, #49BEFF);
    }

        .custom-button1:hover {
            color: var(--bs-btn-hover-color, #fff);
            background-color: var(--bs-btn-hover-bg, #4f73d9);
            border-color: var(--bs-btn-hover-border-color, #4a6ccc);
        }

        .custom-button1:focus {
            box-shadow: 0 0 0 0.25rem rgb(var(--bs-btn-focus-shadow-rgb, 117, 153, 255));
        }

        .custom-button1:active {
            color: var(--bs-btn-active-color, #fff);
            background-color: var(--bs-btn-active-bg, #4a6ccc);
            border-color: var(--bs-btn-active-border-color, #4665bf);
            box-shadow: var(--bs-btn-active-shadow, inset 0 3px 5px rgba(0, 0, 0, 0.125));
        }

        .custom-button1:disabled {
            color: var(--bs-btn-disabled-color, #fff);
            background-color: var(--bs-btn-disabled-bg, #49BEFF);
            border-color: var(--bs-btn-disabled-border-color, #49BEFF);
        }

</style>
