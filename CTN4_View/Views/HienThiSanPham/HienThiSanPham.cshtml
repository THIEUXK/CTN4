                    @foreach (var sp in Model.sanphampaging)
                    {
                        <!-- single product -->
                        {
                            <div class="col-lg-4 col-md-6">
                                <div class="single-product">
                                    @if (System.IO.Path.GetExtension(sp.SanPham.AnhDaiDien) == ".jpg" ||
