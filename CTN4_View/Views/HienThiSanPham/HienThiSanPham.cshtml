                                        <div class="price">
                                            @if (sp.SanPham.GiaNiemYet == sp.SanPham.GiaBan)
                                            {
                                                <h6>@FormatCurrency(sp.SanPham.GiaNiemYet)</h6>
                                            }
                                            else
                                            {
                                                <h6>@FormatCurrency(sp.SanPham.GiaNiemYet)</h6>
                                                <h6 class="l-through">@FormatCurrency(sp.SanPham.GiaBan)</h6>
                                            }
                                        </div>
