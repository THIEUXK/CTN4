<section class="tracking_box_area section_gap">

    <div class="container">
        <div class="tracking_box_inner">
            <p>
                Hay nhập id đơn hàng của bạn để tìm kiếm nhanh
            </p>
            <form class="row tracking_form" action="#" method="post" novalidate="novalidate">
                <div class="col-md-12 form-group">
                    <input type="text" class="form-control" id="order" name="order" placeholder="id Hóa đơn" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Mã Hóa đơn'">
                </div>
                <div class="col-md-12 form-group">
                    <button type="submit" value="submit" class="primary-btn">Tìm</button>
                </div>
            </form>
        </div>
        <h1>Danh sách hóa đơn của bạn</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Mã hóa đơn
                    </th>
                    <th>
                        Ngày đặt hàng
                    </th>
                    <th>
                        Trạng thái
                    </th>
                    <th>
                        Tiền ship
                    </th>
                    <th>
                        Tổng tiền
                    </th>
                    <th>
                        Thanh toán
                    </th>
                    <th>
                        Giao hàng
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaHoaDon)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NgayTaoHoaDon)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TrangThai)
                        </td>
                        <td>
                            @Html.Raw(FormatCurrency(item.TienShip))
                        </td>
                        <td>
                            @Html.Raw(FormatCurrency(item.TongTien))
                        </td>
                        @if (item.TrangThaiThanhToan == true)
                        {
                            <td>
                                @Html.DisplayFor(modelItem => item.TrangThaiThanhToan)
                            </td>

                        }
                        else
                        {
                            <td><div>Chưa thanh toán</div></td>
                        }
                        @if (item.NgayGiao != null)
                        {

                            <td>
                                @item.NgayGiao
                            </td>
                        }
                        else
                        {
                            <td><div>Chưa giao hàng</div></td>
                        }

                        <td>
                        <td>
                                @Html.ActionLink("Xem chi tiết", "HoaDonChiTiet", new {  id=item.Id  }, new { @class = "custom-edit-link" }) 
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
<script>
    @functions {
        public string FormatCurrency(float price)
        {
            string formattedPrice = string.Format("{0:N0}", price); // Định dạng số và thêm dấu phân cách ngàn
            return formattedPrice + "₫"; // Thêm ký hiệu đồng (₫) vào cuối
        }
    };


</script>
