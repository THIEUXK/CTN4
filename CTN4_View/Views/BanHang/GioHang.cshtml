                                <td>
                                    <button style="color:#DDDDDD">@Html.ActionLink("Xem chi tiết", "HienThiSanPhamChiTiet","HienThiSanPham", new {  id=a.SanPhamChiTiet.SanPham.Id }, new { @class = "custom-edit-link" }) </button>
