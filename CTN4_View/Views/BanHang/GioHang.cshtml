@using CTN4_Serv.Service;
@model CTN4_Serv.ViewModel.GioHangView
@{
    ViewData["Title"] = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- End Header Area -->
<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Shopping Cart</h1>
                <nav class="d-flex align-items-center">
                    <a href="index.html">Home<span class="lnr lnr-arrow-right"></span></a>
                    <a href="category.html">Cart</a>
                </nav>
            </div>
        </div>
    </div>
</section>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<!-- End Banner Area -->
<!--================Cart Area =================-->
<section class="cart_area">
    <div class="container">
        <div class="cart_inner">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Product</th>
                            <th scope="col">Màu</th>
                            <th scope="col">Size</th>
                            <th scope="col">Price</th>

                            <th scope="col">Quantity</th>
                            <th scope="col">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{

                        }
                        @foreach (var a in Model.GioHangChiTiets)
                        {
                            <tr>
                                <td>


                                    @foreach (var b in Model.anhs.Where(c => c.IdSanPhamChiTiet == a.IdSanPhamChiTiet))
                                    {

                                        @if (System.IO.Path.GetExtension(b.DuongDanAnh) == ".jpg" ||
                                       System.IO.Path.GetExtension(b.DuongDanAnh) == ".png" ||
                                       System.IO.Path.GetExtension(b.DuongDanAnh) == ".jpeg" ||
                                       System.IO.Path.GetExtension(b.DuongDanAnh) == ".tiff" ||
                                       System.IO.Path.GetExtension(b.DuongDanAnh) == ".webp" ||
                                       System.IO.Path.GetExtension(b.DuongDanAnh) == ".gif")
                                        {
                                            <img src="~/image/@b.DuongDanAnh" height="150">
                                        }
                                        else
                                        {
                                            <span>Ảnh lỗi rồi =)))</span>
                                        }
                                    }

                                    <div class="media-body">
                                        <p>@a.SanPhamChiTiet.SanPham.TenSanPham</p>
                                    </div>

                                </td>
                                <td>
                                    <h5>@a.SanPhamChiTiet.Mau.TenMau</h5>
                                </td>
                                <td>
                                    <h5>@a.SanPhamChiTiet.Size.CoSize</h5>
                                </td>
                                <td>
                                    <h5>@FormatCurrency(a.SanPhamChiTiet.SanPham.GiaNiemYet)</h5>
                                </td>


                                <td>
                                    <div class="product_count">
                                        <input type="text" name="qty" id="sst" maxlength="12" value="@a.SoLuong" title="Quantity:"
                                               class="input-text qty">
                                        <button onclick="var result = document.getElementById('sst'); var sst = result.value; if( !isNaN( sst )) result.value++;return false;"
                                                class="increase items-count" type="button">
                                            <i class="lnr lnr-chevron-up"></i>
                                        </button>
                                        <button onclick="var result = document.getElementById('sst'); var sst = result.value; if( !isNaN( sst ) &amp;&amp; sst > 0 ) result.value--;return false;"
                                                class="reduced items-count" type="button">
                                            <i class="lnr lnr-chevron-down"></i>
                                        </button>
                                    </div>
                                </td>
                                <td>
                                    <h5>@FormatCurrency(a.SanPhamChiTiet.SanPham.GiaNiemYet *a.SoLuong)</h5>
                                </td>
                                <td>
                                    @Html.ActionLink("Xóa", "XoaChiTietGioHang", new { id=a.Id})
                                </td>

                            </tr>
                        }

                        <tr class="bottom_button">
                            <td>
                                <a class="gray_btn" href="#">Update Cart</a>
                            </td>
                            <td>
                            </td>
                            <td>
                            </td>
                            <td>
                                <div class="cupon_text d-flex align-items-center">
                                    <input type="text" placeholder="Coupon Code">
                                    <a class="primary-btn" href="#">Apply</a>
                                    <a class="gray_btn" href="#">Close Coupon</a>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                            </td>
                            <td>
                            </td>
                            <td>
                                <h5>Subtotal</h5>
                            </td>
                            <td>
                                <h5>@FormatCurrency(Model.TongTien)</h5>
                            </td>
                        </tr>

                        <tr class="out_button_area">
                            <td>
                            </td>
                            <td>
                            </td>
                            <td>
                            </td>
                            <td>
                                <div class="checkout_btn_inner d-flex align-items-center">
                                    <a class="gray_btn" asp-controller="HienThiSanPham" asp-action="HienThiSanPham">Tiếp tục mua sắm</a>
                                    <a class="primary-btn" asp-controller="BanHang" asp-action="ThuTucThanhToan">Tiến hành đặt hàng</a>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
<script>
    @functions {
        public string FormatCurrency(float price)
        {
            string formattedPrice = string.Format("{0:N0}", price); // Định dạng số và thêm dấu phân cách ngàn
            return formattedPrice + "₫"; // Thêm ký hiệu đồng (₫) vào cuối
        }
    }
</script>
<!--================End Cart Area =================-->
