@model CTN4_Serv.ViewModel.MailRequest

@{
    ViewData["Title"] = "Index";
}


<div class="container" >
    <h1 style="margin-top:100px">Quên Mật Khẩu</h1>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Khách Hàng</h4>
        <hr />

        <div class="col-md-9">
            <form asp-controller="Home" asp-action="QuenMks" method="post">
                <div class="form-group">
                    <label asp-for="Tendangnhap" class="control-label">Tên Đăng Nhập</label>
                        <input asp-for="Tendangnhap" class="form-control" maxlength="30" oninput="limitInputLength(this, 30)" />
                    
                </div>

                <div class="form-group">
                    <label asp-for="ToEmail" class="control-label">Địa chỉ Email</label>
                        <input asp-for="ToEmail" class="form-control" maxlength="50" oninput="limitInputLength(this, 50)" />
                    
                </div>
                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <span class="text-danger">@ViewBag.Message</span>
                    }
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Gửi Email</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Quay lại danh sách</a>
</div>
</div>