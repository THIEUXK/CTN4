@model CTN4_Serv.ViewModel.Loginviewmodel
@{
    ViewData["Title"] = "login";
    string a = ViewBag.Message;
}



	<section class="login_box_area section_gap">
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<div class="login_box_img">
						<img class="img-fluid" src="~/img/login.jpg" alt="">
						<div class="hover">
							<h4>New to our website?</h4>
							<p>There are advances being made in science and technology everyday, and a good example of this is the</p>
						<a class="primary-btn" asp-controller="Home" asp-action="DangKy">Create an Account</a>
						</div>
					</div>
				</div>
				<div class="col-lg-6">
					<div class="login_form_inner">
						<h3>Log in to enter</h3>
                        <form class="row login_form" asp-action="Login" method="post" id="" novalidate="novalidate">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-md-12 form-group">
                                <input type="text" class="form-control" id="name" name="User" placeholder="User" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Username'">
                              <span asp-validation-for="User" class="text-danger"></span>
                            @if (!string.IsNullOrEmpty(ViewBag.Message))
                            {
                                <span class="text-danger">@ViewBag.Message</span>
                            }

                        </div>
                            <div class="col-md-12 form-group">
                               
                                <input type="password" class="form-control" id="name" name="Password" placeholder="Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Password'">
                            <span asp-validation-for="Password" class="text-danger"></span>
                           
                            </div>
                            <div class="col-md-12 form-group">
                                <div class="creat_account">
                                    <input type="checkbox" id="f-option2" name="selector">
                                    <label for="f-option2">Keep me logged in</label>
                                </div>
                            </div>
                            <div class="col-md-12 form-group">
                                <button type="submit" value="submit" class="primary-btn">Log In</button>

                             <button style="margin-top:50px" asp-action="QuenMk" >Quên mật khẩu?</button>
                            </div>

						
                        </form>
                        <row class="col-12">
                            <div class="col-lg-12"><button><a style="color:black" asp-area="Admin" asp-controller="Home" asp-action="DangNhap">Đăng nhập với tư cách người quản trị</a></button></div>
                        </row>

					</div>
				</div>
			</div>
		</div>
	</section>


