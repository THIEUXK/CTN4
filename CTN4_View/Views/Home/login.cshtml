@model CTN4_Serv.ViewModel.Loginviewmodel
@{
    ViewData["Title"] = "login";
    string a = ViewBag.Message;
}



<section class="login_box_area section_gap">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login_box_img">
                    <img class="img-fluid" src="~/img/login.jpg" alt="">
                    <div class="hover">
                        <h4>Mới vào trang web của chúng tôi?</h4>
                        <p>Hãy tạo cho mình một tài khoản để có thể thỏa sức mua sắm</p>
                        <a class="primary-btn" asp-controller="Home" asp-action="DangKy">Tạo tài khoản</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="login_form_inner">
                    <h3>Đăng nhập</h3>
                    <form class="row login_form" asp-action="Login" method="post" id="" novalidate="novalidate">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-md-12 form-group">
                            <input type="text" class="form-control" id="name" name="User" placeholder="User" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Username'" maxlength="30" pattern="^\S.*$" title="Không được chứa khoảng trắng">
                            <span asp-validation-for="User" class="text-danger"></span>
                            @if (!string.IsNullOrEmpty(ViewBag.Message))
                            {
                                <span class="text-danger">@ViewBag.Message</span>
                            }

                        </div>
                        <div class="col-md-12 form-group">

                            <input type="password" class="form-control" id="name" name="Password" placeholder="Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Password'" maxlength="30" pattern="^\S.*$" title="Không được chứa khoảng trắng">
                            <span asp-validation-for="Password" class="text-danger"></span>

                        </div>
                        <div class="row no-gutters">
                            <div class="col-md-6">
                                <input type="checkbox" id="f-option2" name="selector">
                                <label for="f-option2">
                                    Giữ tôi luôn đăng nhập
                                </label>
                            </div>
                            <div class="col-md-6">
                                <a class="forgot-password-link" asp-action="QuenMk">Quên mật khẩu?</a>
                            </div>
                        </div>

                        <div class="row no-gutters">
                            <div class="col-md-12 form-group">
                                <button type="submit" value="submit" class="primary-btn">Đăng nhập</button>
                            </div>
                        </div>



                    </form>
                    <row class="col-12">
                        <div class="col-lg-12"><button><a style="color:black" asp-area="Admin" asp-controller="Home" asp-action="DangNhap">Đăng nhập với tư cách người quản trị</a></button></div>
                    </row>

                </div>
            </div>
        </div>
    </div>
</section>
<style>
    .forgot-password-link {
        margin-top: 50px;
        color: #000; /* Màu chữ mặc định */
        transition: color 0.3s; /* Thêm hiệu ứng màu khi hover */
    }

        .forgot-password-link:hover {
            color: #007bff; /* Chọn màu xanh (hoặc màu khác tuỳ chọn) khi di chuột vào */
            /* Thêm gạch chân khi hover nếu cần thiết */
            cursor: pointer;
        }

</style>

