@using Microsoft.AspNetCore.Mvc.Rendering
@model CTN4_Data.Models.DB_CTN4.KhachHang;
@{
    ViewData["Title"] = "Thông Tin Khách Hàng";
}

<style>
    h1 {
        color: #333;
        text-align: center;
        
        background-color: #3498db;
        margin: 0;
    }

    .mt-5 {
        margin-top: 50px;
    }.mt-6 {
        margin-top: 30px;
    }

    .outer-border {
        border: 1px solid #ddd; /* Add an outer border */
        border-radius: 10px; /* Optional: Add border radius for a softer look */
        padding: 20px; /* Add padding for better spacing */
        text-align: center; /* Center the content */
    }

    .row-label {
        font-weight: bold;
        border-bottom: 1px solid #ddd; /* Add a border under each label */
        padding-bottom: 5px;
        margin-bottom: 10px;
        position: relative;
    }

        .row-label::after {
            content: '\2022'; /* Add a bullet point after each label */
            color: #007bff; /* Bullet point color */
            position: absolute;
            top: 50%;
            right: 0;
            transform: translateY(-50%);
            margin-left: 5px;
        }

    .upload-section {
        margin-bottom: 20px;
    }

    .upload-btn {
        margin-top: 10px;
    }
</style>

<br />
<br />
<br />
<br />
<br />
<div class="container mt-6 outer-border" style="background-color: #3498db;">
    <h1 href="single-product.html">Thông Tin Khách Hàng</h1>
</div>
<div class="container mt-5 outer-border">
    <dl class="row">
        <dt class="col-sm-2 row-label">Họ:</dt>

        <dd class="col-sm-10">@Html.DisplayFor(model => model.Ho)</dd>
        <dt class="col-sm-2 row-label">Tên:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Ten)</dd>
        <dt class="col-sm-2 row-label">Giới tính: </dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.GioiTinh)</dd>
        <dt class="col-sm-2 row-label">Ảnh Đại Diện:</dt>
        @if (@Model.AnhDaiDien != null)
        {
            <dd class="col-sm-10">
                @if (System.IO.Path.GetExtension(Model.AnhDaiDien) == ".jpg" ||
               System.IO.Path.GetExtension(Model.AnhDaiDien) == ".png" ||
               System.IO.Path.GetExtension(Model.AnhDaiDien) == ".jpeg" ||
               System.IO.Path.GetExtension(Model.AnhDaiDien) == ".tiff" ||
               System.IO.Path.GetExtension(Model.AnhDaiDien) == ".webp" ||
               System.IO.Path.GetExtension(Model.AnhDaiDien) == ".gif")
                {
                    <img src="~/anhdd/@Model.AnhDaiDien" height="100">
                }
                else
                {
                    <a>ảnh lỗi</a>
                }
            </dd>
        }
        else
        {
            <dd class="col-sm-10"></dd>
        }
        <!-- Include other fields here -->
        <dt class="col-sm-2 row-label">Email:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>
        <dt class="col-sm-2 row-label">SDT:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.SDT)</dd>
        <dt class="col-sm-2 row-label">Địa Chỉ:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DiaChi)</dd>
    </dl>
    <div class="upload-section">
        <form asp-action="AddAnhDaiDien" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-sm-12">
                    <div class="m-b-15">
                        <input type="hidden" name="IdKh" value="@Model.Id" />
                        <input name="imageFile" type="file" />
                        <button id="btnUpload" class="btn btn-primary upload-btn">
                            <i class="anticon anticon-save"></i> Thêm ảnh đại diện
                        </button>
                        @if (TempData["Notification"] != null)
                        {
                            <a style="color:red">@TempData["Notification"]</a>
                        }
                    </div>
                </div>
            </div>
        </form>
    </div>
    
    <div class="row">
        <div class="col-sm-12">
            <a class="btn btn-primary" asp-action="UpdateKH">Cập Nhật</a>
            
            <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
        </div>
    </div>
</div>
