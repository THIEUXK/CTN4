@model CTN4_Serv.ViewModel.ThieuxkView

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<br></br>
<br></br>

<div>
    <h4>Quản lí sản phẩm</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            Ảnh đại diện
        </dt>
        <dd class="col-sm-10">
            @if (System.IO.Path.GetExtension(Model.SanPham.AnhDaiDien) == ".jpg" ||
            System.IO.Path.GetExtension(Model.SanPham.AnhDaiDien) == ".png" ||
            System.IO.Path.GetExtension(Model.SanPham.AnhDaiDien) == ".jpeg" ||
            System.IO.Path.GetExtension(Model.SanPham.AnhDaiDien) == ".tiff" ||
            System.IO.Path.GetExtension(Model.SanPham.AnhDaiDien) == ".webp" ||
            System.IO.Path.GetExtension(Model.SanPham.AnhDaiDien) == ".gif")
            {
                <img src="~/image/@Model.SanPham.AnhDaiDien" height="100">
            }
            else
            {
                <span>Ảnh lỗi rồi =)))</span>
            }
        </dd>
        <dt class="col-sm-2">
            Chất liệu
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SanPham.ChatLieu.TenChatLieu)
        </dd>
        <dt class="col-sm-2">
            Nhà sản xuất
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SanPham.NSX.TenNSX)
        </dd>
        <dt class="col-sm-2">
            Mã sản Phẩm
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SanPham.MaSp)
        </dd>
        <dt class="col-sm-2">
            Tên sản phẩm
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SanPham.TenSanPham)
        </dd>
        <dt class="col-sm-2">
            Ảnh đại diện
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SanPham.AnhDaiDien)
        </dd>
        <dt class="col-sm-2">
            Trạng thái
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SanPham.TrangThai)
        </dd>
        <dt class="col-sm-2">
            Mô tả
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SanPham.MoTa)
        </dd>
        <dt class="col-sm-2">
            Giá nhập
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SanPham.GiaNhap)
        </dd>
        <dt class="col-sm-2">
            Giá bán
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SanPham.GiaBan)
        </dd>
        <dt class="col-sm-2">
            Gia niên yết
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SanPham.GiaNiemYet)
        </dd>
        <dt class="col-sm-2">
            Ghi chú
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SanPham.GhiChu)
        </dd>
        <dt class="col-sm-2">
            Is_detele
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SanPham.Is_detele)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Chỉnh sửa", "Edit", new {id = Model.SanPham.Id },new { style = "text-decoration: none; color: black;" }) |

    <a asp-action="Index" style="text-decoration: none;color: black;">Quay về</a>
</div>
<hr />
<div>
    <button type="button" class="btn btn-warning m-1"><a asp-controller="QuanLYH" asp-action="Create" style="color:white">Thêm</a></button>
    
</div>


<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                Ảnh sản phẩm
            </th>
            <th>
                Tên sản phẩm
            </th>

            <th>
                Số lượng
            </th>

            <th>
                Trạng thái
            </th>


            <th>
                Màu
            </th>
            <th>
                Size
            </th>

            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.sanPhamChiTiets)
        {
            <tr>
                <td>
                    <tb>
                        @foreach (var b in Model.AhList.Where(c => c.IdSanPhamChiTiet == item.Id))
                        {

                            @if (System.IO.Path.GetExtension(b.DuongDanAnh) == ".jpg" ||
                           System.IO.Path.GetExtension(b.DuongDanAnh) == ".png" ||
                           System.IO.Path.GetExtension(b.DuongDanAnh) == ".jpeg" ||
                           System.IO.Path.GetExtension(b.DuongDanAnh) == ".tiff" ||
                           System.IO.Path.GetExtension(b.DuongDanAnh) == ".webp" ||
                           System.IO.Path.GetExtension(b.DuongDanAnh) == ".gif")
                            {
                                <img src="~/image/@b.DuongDanAnh" height="150">
                            }
                            else
                            {
                                <span>Ảnh lỗi rồi =)))</span>
                            }
                        }
                    </tb>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SanPham.TenSanPham)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuong)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.TrangThai)
                </td>



                <td>
                    @Html.DisplayFor(modelItem => item.Mau.TenMau)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Size.CoSize)
                </td>
                <td>
                    @Html.ActionLink("Chỉnh sửa", "Edit",new { id=item.Id },new { style = "text-decoration: none; color: black;" }) |
                    @Html.ActionLink("Chi tiết", "Details",new { id=item.Id }, new { style = "text-decoration: none; color: black;" }) |
                    @Html.ActionLink("Xóa", "Delete",new { id=item.Id },new { style = "text-decoration: none; color: black;" }) |
                </td>
            </tr>
        }
    </tbody>
</table>
<style>
    /* Thêm điều chỉnh tùy chỉnh nếu cần thiết */
    table {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    th, td {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        border: 1px solid #dee2e6; /* Đường viền của ô */
        padding: 10px;
    }
    /* Đường kẻ giữa các ô */
    table.table-bordered {
        border: 1px solid #dee2e6;
    }

        /* Đường kẻ giữa các dòng */
        table.table-bordered tbody tr {
            border: 1px solid #dee2e6;
        }

    .link-styling {
        text-decoration: underline;
        color: black;
    }
</style>
