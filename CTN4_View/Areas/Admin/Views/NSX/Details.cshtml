@model CTN4_Data.Models.DB_CTN4.NSX

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<br />
<br />
<br />
<br />
<h1>Chỉnh sửa</h1>

<div>
    <h4>Nhà sản xuất</h4>
    <hr />
    <dl class="row">
       
        <dt class = "col-sm-2">
           Tên nhà sản xuất
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenNSX)
        </dd>
        <dt class="col-sm-2">
            Ghi chú
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GhiChu)
        </dd>
        <dt class = "col-sm-2">
           Trạng thái
        </dt>
        <dd class = "col-sm-10">
            @if (Model.TrangThai == true)
            {
                <a>Hiển thị trên trang web</a>
            }
            else
            {
                <a>Tạm ẩn</a>
            }
        </dd>
        
        <dt class = "col-sm-2">
           Tình trạng
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Is_detele == true)
            {
                <a>Hiển thị</a>
            }
            else
            {
                <a>Tạm ẩn</a>
            }
        </dd>
    </dl>
</div>
<div>
    <a>@Html.ActionLink("Chỉnh sửa", "Edit",new { id=Model.Id },new { style = "text-decoration: none; color: black;" }) |</a>

    <a asp-action="Index" style="color: black;">Quay về</a>
</div>
