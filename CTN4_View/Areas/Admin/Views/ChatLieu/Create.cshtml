    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div>
    <a asp-action="Index" style="color: black;">Quay về</a>
</div>
<div class="row">
    <div class="col-md-9">
        <br></br>
        <br></br>

        
        <h1>Thêm mới</h1>

        <h4>Chất Liệu</h4>
        <hr />
        <div class="row">
            <div class="col-md-9">
