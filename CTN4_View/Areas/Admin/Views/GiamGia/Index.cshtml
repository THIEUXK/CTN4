@model IEnumerable<CTN4_Data.Models.DB_CTN4.GiamGia>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Index</h1>

<div class="row ">
    <div class="card">
        <div class="card-body">
            <br></br>

            <h1>Quản lý giảm giá</h1>


            <p>
                <button type="button" class="btn btn-warning btn-fw editable-click=" asp-action="Create"><a asp-action="Create" style="color:white">Thêm</a></button>

            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.MaGiam)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SoTienGiam)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PhanTramGiam)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TrangThai)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SoLuong)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NgayBatDau)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NgayKetThuc)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SoTienGiamToiDa)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DieuKienGiam)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaGiam)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SoTienGiam)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhanTramGiam)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TrangThai)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SoLuong)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgayBatDau)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgayKetThuc)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SoTienGiamToiDa)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DieuKienGiam)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id=item.Id})
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>