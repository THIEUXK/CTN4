@model CTN4_Data.Models.DB_CTN4.Size

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}   


<div class="row">
    <div class="col-md-9">
        <br></br>
        <br></br>
       
       

        <h1>Tạo mới</h1>

        <h4>Size</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create" onsubmit="return confirmSubmit();">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group">
                        <label asp-for="TenSize" class="control-label"></label>
                        <input asp-for="TenSize" class="form-control" />
                        <span asp-validation-for="TenSize" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CoSize" class="control-label">Tên cỡ</label>
                        <input asp-for="CoSize" class="form-control" />
                        <span asp-validation-for="CoSize" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                   
                </form>
            </div>
        </div>
        <div>
            <a asp-action="Index" style="color: black;">Quay về</a>
        </div>
    </div>
</div>

<script>
    function confirmSubmit() {
        // Hiển thị hộp thoại xác nhận
        var result = confirm("Bạn có chắc muốn thêm mới cỡ size này không?");
        return result;
    }
</script>