@model IEnumerable<CTN4_Data.Models.DB_CTN4.DanhMuc>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row ">
    <div class="card">
        <div class="card-body">
            <br></br>

            <h1>Index</h1>

            <p>
                <button type="button" class="btn btn-warning btn-fw editable-click=" asp-action="Create"><a asp-action ="Create" style="color:white">Thêm</a></button>

            </p>
            <table class="table">
                <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TenDanhMuc)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Is_detele)
                    </th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenDanhMuc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Is_detele)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id=item.Id})
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
