@model CTN4_Serv.ViewModel.ThieuxkView


@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div>
    <a asp-action="Index">Quay về</a>
</div>
<div class="row">
    <div class="col-md-9">
        <br></br>
        <br></br>

        <h1>Chi tiết</h1>

        <div>
            <h4>Danh mục</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                   Tên danh mục
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DanhMuc.TenDanhMuc)
                </dd>
                <dt class="col-sm-2">
                   Tình trạng
                </dt>
                <dd class="col-sm-10">
                    @if (@Model.DanhMuc.Is_detele == true)
                    {
                        <p>Hiển thị</p>
                    }
                    else
                    {
                        <p>Đã ẩn</p>
                    }
                </dd>
            </dl>
        </div>



    </div>
</div>
<div>
    @Html.ActionLink("Chỉnh sửa", "Edit", new {id = Model.DanhMuc.Id }, new { style = "text-decoration: none; color: black;" }) |

    <a asp-action="Index" style="text-decoration: none; color: black;">Quay về</a>

</div>
<hr />
<div>
    <button class="btn btn-warning btn-fw editable-click=">@Html.ActionLink("Thêm mới", "ThemSanPhamDanhMuc","QuanLyAddDanhMuc", new {id = Model.DanhMuc.Id }, new { style = "color: white;text-decoration: none; " }) </button>

</div>


<table class="table">
    <thead class="thead-dark">
    <tr>
        <th>
            Ảnh sản phẩm
        </th>
        <th>
            Tên sản phẩm
        </th>

        <th>
            Tên danh mục
        </th>
        <th>
        </th>
    </tr>
</thead>
<tbody>
    @foreach (var item in Model.danhMucChiTiets)
    {
        <tr>
            <td>
                <tb>
                        @if (System.IO.Path.GetExtension(item.SanPham.AnhDaiDien) == ".jpg" ||
                       System.IO.Path.GetExtension(item.SanPham.AnhDaiDien) == ".png" ||
                       System.IO.Path.GetExtension(item.SanPham.AnhDaiDien) == ".jpeg" ||
                       System.IO.Path.GetExtension(item.SanPham.AnhDaiDien) == ".tiff" ||
                       System.IO.Path.GetExtension(item.SanPham.AnhDaiDien) == ".webp" ||
                       System.IO.Path.GetExtension(item.SanPham.AnhDaiDien) == ".gif")
                        {
                    <img src="~/image/@item.SanPham.AnhDaiDien" height="150">
                        }
                        else
                        {
                            <span>Ảnh lỗi rồi =)))</span>
                        }
                </tb>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SanPham.TenSanPham)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DanhMuc.TenDanhMuc)
            </td>
            <td>

                    <button class="btn btn-danger m-1" onclick="return confirmDelete();">
                        @Html.ActionLink("Xóa", "BoSpDanhMuc", "QuanLyAddDanhMuc", new { idsp = item.SanPham.Id, iddm = Model.DanhMuc.Id }, new { style = "text-decoration: none; color: white;" })
                    </button>


            </td>
        </tr>
    }
</tbody>
</table>
<script>
    function confirmDelete() {
        var result = confirm("Bạn có chắc chắn muốn xóa không?");
        return result;
    }
</script>
<style>
    /* Thêm điều chỉnh tùy chỉnh nếu cần thiết */
    table {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    th, td {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        border: 1px solid #dee2e6; /* Đường viền của ô */
        padding: 10px;
    }
    /* Đường kẻ giữa các ô */
    table.table-bordered {
        border: 1px solid #dee2e6;
    }

        /* Đường kẻ giữa các dòng */
        table.table-bordered tbody tr {
            border: 1px solid #dee2e6;
        }

    .link-styling {
        text-decoration: underline;
        color: black;
    }
</style>

