                                    {
                                        <div class="alert alert-danger">@TempData["TB1"]</div>
                                    }
                                    @if (TempData["TB5"] != null)
                                    {
                                        <div class="alert alert-danger">@TempData["TB5"]</div>
                                    }
                                </div>
                                <div class="col-md-2">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card w-100">
                        <div class="card-body p-4">
                            @if (Model.HoaDon.NgayGiao != null)
                            {
                                <div style="color:yellowgreen">Đơn hàng đã bắt đầu được giao</div>

                            }
                            else
                            {
                                <p style="color:red">Đơn hàng chưa được giao !</p>
                            }

                            <hr></hr>
                            <div class="table-responsive">
                                <table class="table text-nowrap mb-0 align-middle">
                                    <thead class="text-dark fs-4">
                                        <tr>
                                            <th class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0">Ảnh sản phẩm</h6>
                                            </th>
                                            <th class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0">Sản phẩm</h6>
                                            </th>
                                            <th class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0">Số lượng</h6>
                                            </th>
                                            <th class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0">Giá tiền</h6>
                                            </th>
                                            <th class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0">trạng thái</h6>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var a in Model.hoaDonChiTiets)
                                        {
                                            <tr>
                                                <td class="border-bottom-0">


                                                    @if (System.IO.Path.GetExtension(a.SanPhamChiTiet.SanPham.AnhDaiDien) == ".jpg" ||
                                                   System.IO.Path.GetExtension(a.SanPhamChiTiet.SanPham.AnhDaiDien) == ".png" ||
                                                   System.IO.Path.GetExtension(a.SanPhamChiTiet.SanPham.AnhDaiDien) == ".jpeg" ||
                                                   System.IO.Path.GetExtension(a.SanPhamChiTiet.SanPham.AnhDaiDien) == ".tiff" ||
                                                   System.IO.Path.GetExtension(a.SanPhamChiTiet.SanPham.AnhDaiDien) == ".webp" ||
                                                   System.IO.Path.GetExtension(a.SanPhamChiTiet.SanPham.AnhDaiDien) == ".gif")
                                                    {
                                                        <img src="~/image/@a.SanPhamChiTiet.SanPham.AnhDaiDien" height="100">
                                                    }
                                                    else
                                                    {
                                                        <a>ảnh lỗi</a>
                                                    }


                                                </td>
                                                <td class="border-bottom-0">
                                                    <div><b>Tên:</b>@a.SanPhamChiTiet.SanPham.TenSanPham</div>
                                                    <div><b>Màu:</b>@a.SanPhamChiTiet.Mau.TenMau</div>
                                                    <div><b>Size:</b>@a.SanPhamChiTiet.Size.CoSize</div>
                                                    <div><b>Đơn giá:</b>@FormatCurrency(a.SanPhamChiTiet.SanPham.GiaNiemYet)</div>

                                                </td>
                                                <td class="border-bottom-0">
                                                    <p class="mb-0 fw-normal">@a.SoLuong</p>
                                                </td>
                                                <td class="border-bottom-0">
                                                    <p class="mb-0 fw-normal">@FormatCurrency(a.GiaTien * a.SoLuong)</p>
                                                </td>
                                                <td class="border-bottom-0">
                                                    @if (a.TrangThai == true)
                                                    {
                                                        <p class="mb-0 fw-normal" style="color:limegreen">Bình thường</p>
                                                    }
                                                    else
                                                    {
                                                        <p class="mb-0 fw-normal" style="color:red">Hàng bị đổi trả</p>
                                                    }
                                                </td>
                                                <td class="border-bottom-0">
                                                    @if (a.TrangThai == true)
                                                    {
                                                        <div class="d-flex align-items-center gap-2">
                                                            <span class="btn btn-custom-rangen ">
                                                                @Html.ActionLink("Bỏ", "BoSanPham", new { idHDCT = a.Id, idHD = Model.HoaDon.Id }, new { @class = "custom-edit-link" })

                                                            </span>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="d-flex align-items-center gap-2">
                                                            <span class="btn btn-custom-primary">@Html.ActionLink("Hoàn tác", "HoanTacSp", new { idHDCT = a.Id, idHD = Model.HoaDon.Id }, new { @class = "custom-edit-link" })</span>
                                                        </div>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <hr></hr>
                            @if (Model.HoaDon.NgayGiao != null)
                            {
                            }
                            else
                            {
                                <span class="btn btn-custom-primary">@Html.ActionLink("Giao Hàng", "XacNhanGiaoHang", new { id = Model.HoaDon.Id }, new { @class = "custom-edit-link" })</span>
                            }
                        </div>
                    </div>
                    <div class="card w-100">
                        <div class="card-body p-4">
                            @if (Model.HoaDon.TrangThaiThanhToan == true)
                            {
                                <div style="color:blue">Đơn hàng đã được thanh toán</div>
                            }
                            else
                            {
                                <div style="color:red">Đơn hàng chưa được thanh toán !</div>
                            }
                            <hr></hr>
                            <div class="row">
                                <div class="col-md-6">
                                    <div scope="col"><b>Ghi Chú Đơn Hàng</b></div>
                                    <br />
                                    <form asp-action="SuaGhiChu">
                                        <input type="hidden" name="IdHoaDon" value="@Model.HoaDon.Id">
                                        <div class="form-group">
                                            <label for="GhiChu" class="col-form-label">Cập nhật ghi chú cho đơn hàng</label>
                                            <input type="text" name="GhiChu" class="form-control">
                                        </div>
                                        <br />
                                        <div class="form-row">
                                            <div class="col">
                                                <button type="submit" class="btn btn-custom-primary">Cập Nhật</button>
                                            </div>
                                            <div class="col-auto text-right"></div>
                                        </div>
                                        <br />
                                    </form>
                                </div>
                                <div class="col-md-6">
                                    <br />
                                    <br />
                                    <div class="row">
                                        <div class="col">Số lượng sản phẩm</div>
                                        <div class="col-auto text-right">@Model.soLuongTong</div>
                                    </div>
                                    <div class="row">
                                        <div class="col">Tiền hàng</div>
                                        <div class="col-auto text-right">@FormatCurrency(Model.TongTienHang)</div>
                                    </div>
                                    <div class="row">
                                        <div class="col">Tiền Giảm</div>
                                        <div class="col-auto text-right">@FormatCurrency((Model.TongTienHang + Model.HoaDon.TienShip) - Model.HoaDon.TongTien)</div>
                                    </div>
                                    <div class="row">
                                        <div class="col">Tiền ship</div>
                                        <div class="col-auto text-right">
                                            @FormatCurrency(Model.HoaDon.TienShip
                                                     )
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col"><b>Tổng giá trị đơn hàng</b></div>
                                        <div class="col-auto text-right"><b>@FormatCurrency(Model.HoaDon.TongTien)</b></div>
                                    </div>
                                </div>
                                <hr></hr>
                                @if (Model.HoaDon.TrangThaiThanhToan == false)
                                {
                                    <span class="btn btn-custom-primary">@Html.ActionLink("Xác nhận đã thanh toán", "XacNhanThanhToan", new { id = Model.HoaDon.Id }, new { @class = "custom-edit-link" })</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="card w-100">
                        <div class="card-body p-4">
                            <label>Thêm nội dung ghi chú</label>
                            <form asp-action="ThemBinhLuan">
                                <div class="row">
                                    <input type="hidden" name="IdHoaDon" value="@Model.HoaDon.Id" />
                                    <div class="col"><input type="text" name="BinhLuan" value="" class="form-control"></input></div>
                                    <div class="col-auto text-right"><button class="btn btn-custom-primary fas fa-plus">Thêm</button></div>
                                </div>
                            </form>
                            @if (TempData["TBLS"] != null)
                            {
                                <div class="alert alert-danger">@TempData["TBLS"]</div>
                            }
                            <table class="table">
                                <thead>
                                <tr>
                                    <th scope="col"></th>
                                    <th scope="col">Ghi chú</th>
                                    <th scope="col">Người Ghi</th>
                                    <th scope="col">Thời gian</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var a in Model.LichSuHoaDon.Where(c=>c.TrangThai==false))
                                {
                                    <tr>
                                        <th scope="row">@a.ThaoTac</th>
                                        <td>@a.GhiChu</td>
                                        <td>@a.NguoiThucHien</td>
                                        <td>@a.ThoiGianlam</td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                            <br/>
                            <div class="dropdown">
                                <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
                                   Xem lịch sử
                                </button>
                                <form class="dropdown-menu p-4">
                                    <table class="table">
                                        <thead>
                                        <tr>
                                            <th scope="col">Hành động</th>
                                            <th scope="col">Ghi chú</th>
                                            <th scope="col">Người thục hiện</th>
                                            <th scope="col">Thời gian</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        @foreach (var a in Model.LichSuHoaDon)
                                        {
                                            <tr>
                                                <th scope="row">@a.ThaoTac</th>
                                                <td>@a.GhiChu</td>
                                                <td>@a.NguoiThucHien</td>
                                                <td>@a.ThoiGianlam</td>
                                            </tr>
                                        }
                                        </tbody>
                                    </table>
                                </form>
                            </div>
                           
                        </div>
                    </div>
                    <div class="card w-100">
                        <div class="card-body p-4">
                            <div>Trạng thái hiện tại của đơn hàng này là: <span style="color:saddlebrown">@Model.HoaDon.TrangThai</span></div>
                            @if (Model.HoaDon.TrangThai == "Hàng của bạn đang được giao")
                            {
                                <div class="div_right">
                                    <p>
                                        <td class="border-bottom-0">
                                            <div class="d-flex align-items-center gap-2">
                                                <span class="btn btn-custom-rangen">@Html.ActionLink("Giao hàng thành công", "XacNhanNhanHang", new { id = Model.HoaDon.Id }, new { @class = "custom-edit-link" })</span>
                                            </div>
                                        </td>
                                    </p>
                                </div>
                            }
                            @if (Model.HoaDon.TrangThai == "Hàng của bạn đang được giao")
                            {
                                <div class="div_right">
                                    <p>
                                        <td class="border-bottom-0">
                                            <div class="d-flex align-items-center gap-2">
                                                <span class="btn btn-custom-rangen">@Html.ActionLink("Giao thất bại", "GiaoHangThatBai", new { id = Model.HoaDon.Id }, new { @class = "custom-edit-link" })</span>
                                            </div>
                                        </td>
                                    </p>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="card w-100">
                        <div class="card-body p-4">
                            @if (Model.HoaDon.Is_detele == true)
                            {
                                <form asp-action="HuyDon">
                                    <input type="hidden" name="id" value="@Model.HoaDon.Id">
                                    <div class="form-group">
                                        <label for="GhiChu" class="col-form-label">Lý do hủy đơn</label>
                                        <input type="text" name="LyDo" class="form-control">
                                    </div>
                                    <br />
                                    <div class="form-row">
                                        <div class="col">
                                            <button type="submit" class="btn btn-custom-primary">Hủy đơn</button>
                                        </div>
                                        <div class="col-auto text-right"></div>
                                    </div>
                                    <br />
                                </form>
                            }
                            else
                            {
                                <div style="color:red">Đơn hàng đã bị hủy !</div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card w-100">
                    <div class="card-body p-4">
                        <div scope="col"><b>Xác thực đơn hàng</b></div>
                        <hr></hr>
                        @if (Model.HoaDon.TrangThai != "Đang chờ xử lí")
                        {
                            <div style="color:yellowgreen">Đơn hàng đã được xác nhận</div>
                        }
                        else
                        {

                            <div style="color:red">
                                Đơn hàng chưa được xác nhận !
                            </div>
                            <br />
                            <div>
                                <span>
                                    <div class="div_right">
                                        <p>
                                            <td class="border-bottom-0">
                                                <div class="d-flex align-items-center gap-2">
                                                    <span class="btn btn-custom-rangen">@Html.ActionLink("Xác nhận đơn", "XacNhanNhanHang2", new { id = Model.HoaDon.Id }, new { @class = "custom-edit-link" })</span>
                                                </div>
                                            </td>
                                        </p>
                                    </div>

                                </span>
                            </div>
                        }
                    </div>
                </div>
                <div class="card w-100">
                    <div class="card-body p-4">
                        <div scope="col"><b>Thông Tin Người Mua</b></div>
                        <hr></hr>
                        @*   <div class="row"> <div class="col">Họ tên : </div><div class="col-auto text-right">@Model.HoaDon.TenKhachHang</div></div>*@
                        <div class="col">Họ tên :@Model.HoaDon.TenKhachHang</div>
                        <div>Số ĐT  : @Model.HoaDon.SDTNguoiNhan</div>
                        <div>Email  : @Model.HoaDon.Email</div>
                        <br />
                        @if (Model.HoaDon.IdKhachHang != null)
                        {
                            <button class="btn btn-custom-primary">Xem thông tin chi tiết</button>
                        }
                    </div>
                </div>
                <div class="card w-100">
                    <div class="card-body p-4">
                        <div scope="col"><b>Địa Chỉ Giao Hàng</b></div>
                        <hr></hr>
                        <div>Địa chỉ giao: @Model.HoaDon.DiaChi</div>
                    </div>
                </div>
                <div class="card w-100">
                    <div class="card-body p-4">
                        <div scope="col"><b>Ghi Chú</b></div>
                        <hr></hr>
                        @if (Model.HoaDon.GhiChu != null)
                        {
                            <div class="col">@Model.HoaDon.GhiChu</div>
                        }
                        else
                        {
                            <div class="col">
                                Không có
                                ghi chú
                            </div>

                        }

                    </div>
                </div>
            </div>

        </div>
    </div>
</body>
