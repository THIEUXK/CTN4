                        <div>Số ĐT  : @Model.HoaDon.SDTNguoiNhan</div>
                        <div>Email  : @Model.HoaDon.Email</div>
                        <br />
                        @if (Model.HoaDon.IdKhachHang != null)
                        {
                            <span class="btn btn-custom-primary">@Html.ActionLink("Xem thông tin chi tiết", "Details", "KhachHang", new { id = Model.HoaDon.IdKhachHang }, new { @class = "custom-edit-link" })</span>
                        }
                    </div>
                    @if (Model.HoaDon.TrangThai == "Đang chờ xử lí")
                    {
                        <div class="dropdown">
                            <button type="button" class="btn btn-custom-primary" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
                                ...
                            </button>
                            <div class="dropdown-menu p-4">
                                <form asp-action="SuaDiaChiVaThongTin">
                                    <input type="hidden" name="id" value="@Model.HoaDon.Id"/>
