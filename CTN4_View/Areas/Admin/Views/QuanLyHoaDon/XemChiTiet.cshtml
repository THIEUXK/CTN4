@model CTN4_View.Areas.Admin.Viewmodel.ThieuxkViewAdmin
@{
    ViewData["Title"] = "XemChiTiet";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<body>
    <!--  Body Wrapper -->
    <!--  Header End -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-9">
                <div class="div_left">
                    <div class="card w-100">
                        <div class="card-body p-4">
                            <div class="row">
                                <div class="col-md-10">
                                    <table class="table table-borderless">

                                        <thead>
                                            <tr>
                                                <th scope="col"><b>Mã</b></th>
                                                <th scope="col"><b>Trạng Thái giao hàng</b></th>
                                                <th scope="col"><b>Trạng thái thanh toán</b></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <th scope="row"><h4>@Model.HoaDon.MaHoaDon</h4></th>
