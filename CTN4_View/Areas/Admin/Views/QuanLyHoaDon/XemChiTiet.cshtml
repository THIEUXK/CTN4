            <div class="col-md-3">
                <div class="card w-100">
                    <div class="card-body p-4">
                        <div scope="col"><b>Xác thực đơn hàng</b></div>
                        <hr></hr>
                        @if (Model.HoaDon.TrangThai != "Đang chờ xử lí")
                        {
                            <div style="color:yellowgreen">Đơn hàng đã được xác nhận</div>
